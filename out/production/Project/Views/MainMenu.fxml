<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox centerShape="true" fx:controller="Controllers.MainMenuController" xmlns:fx="http://javafx.com/fxml"
      prefHeight="${controller.windowHeight}" prefWidth="${controller.windowWidth}">
    <children>
        <Button onAction="#runGame" text="Start" prefHeight="50" prefWidth="150"/>
        <Button onAction="#load" text="Load" prefHeight="50" prefWidth="150"/>
        <Button onAction="#about" text="About" prefHeight="50" prefWidth="150"/>
        <Button onAction="#exitGame" text="Exit" prefHeight="50" prefWidth="150" />
    </children>
</VBox>